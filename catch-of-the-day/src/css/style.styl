button, input[type=submit]
  text-transform uppercase
  background none
  border 1px solid black
  font-weight 600
  transition all 0.2s
  position relative
  z-index 2
  &[disabled]
    color white
    background red
    border-color: red
    
    &:hover
      color red
      cursor not-allowed
    &:after
      display none
  &:after
    content ''
    z-index -1
    display block
    background black
    position absolute
    width 100%
    height 0
    left 0
    top 0
    transition all 0.2s
  &:hover, &:focus
    color white
    outline 0
    &:after
      height 100%
  // variants
  &.warning
    &:after
      background red
  &.success
    &:after
      background green

  


